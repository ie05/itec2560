{{#if color_filter}}
<h1>Flowers ({{color_filter}})</h1>
{{else}}
<h1>Flowers</h1>
{{/if}}


<form action="/" method="get">
<select name="color_filter">
{{#each colors}}
<option value="{{this}}">{{this}}</option>
{{/each}}
</select>
<button type="submit">Choose Color</button>
</form>


<ul>
{{#each flowers}}
<li>{{this.name}} is {{this.color}}</li>
{{/each}}
</ul>

{{#if color_filter}}
<a href="/">Clear selection</a>
{{/if}}